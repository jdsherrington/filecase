{
  "name": "filecase",
  "private": true,
  "packageManager": "bun@1.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --cwd apps/web dev",
    "build": "bun run build:shared && bun run build:ui && bun run build:web",
    "build:shared": "bun run --cwd packages/shared build",
    "build:ui": "bun run --cwd packages/ui build",
    "build:web": "bun run --cwd apps/web build",
    "typecheck": "bun run typecheck:shared && bun run typecheck:ui && bun run typecheck:web",
    "typecheck:shared": "bun run --cwd packages/shared typecheck",
    "typecheck:ui": "bun run --cwd packages/ui typecheck",
    "typecheck:web": "bun run --cwd apps/web typecheck",
    "lint": "biome check .",
    "format": "biome format --write .",
    "test": "bun run test:shared && bun run test:ui && bun run test:web",
    "test:shared": "bun run --cwd packages/shared test",
    "test:ui": "bun run --cwd packages/ui test",
    "test:web": "bun run --cwd apps/web test",
    "db:up": "docker-compose up -d postgres",
    "db:up:tools": "docker-compose --profile tools up -d",
    "db:down": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres && bun run db:migrate && bun run db:seed",
    "db:migrate": "bun run --cwd apps/web db:migrate",
    "db:seed": "bun run --cwd apps/web db:seed",
    "db:generate": "bun run --cwd apps/web db:generate"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "bun-types": "^1.2.15",
    "typescript": "^5.7.2"
  }
}
